generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model User {
  id                 Int                  @id @default(autoincrement())
  name               String?              @default("Handsome User")
  email              String               @unique
  password           String
  role               Role                 @default(USER)
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  listenHistories    ListenHistory[]
  Favorite           Favorite[]
  PasswordResetToken PasswordResetToken[]
  PlayList           PlayList[]

  @@map("users")
}

model Artist {
  id         Int     @id @default(autoincrement())
  artistId   String? @unique
  name       String  @unique
  uri        String? @unique
  popularity Int?
  images     Image[]

  @@map("artists")
}

model Image {
  id       Int     @id @default(autoincrement())
  url      String
  artistId String?
  artist   Artist? @relation(fields: [artistId], references: [artistId], onDelete: Cascade)
  track    Track?  @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId  Int?

  @@map("images")
}

model Track {
  id              Int             @id @default(autoincrement())
  name            String
  uri             String          @unique
  genres          String[]
  artistId        String
  artistType      ArtistType
  listenHistories ListenHistory[]
  images          Image[]
  Favorite        Favorite[]

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  PlayList   PlayList? @relation(fields: [playListId], references: [id])
  playListId Int?

  @@map("tracks")
}

model ListenHistory {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  track      Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId    Int
  listenedAt DateTime @default(now())

  @@unique([userId, trackId, listenedAt])
  @@map("listen_histories")
}

model Favorite {
  id      Int   @id @default(autoincrement())
  user    User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId  Int
  track   Track @relation(fields: [trackId], references: [id], onDelete: Cascade)
  trackId Int

  @@unique([userId, trackId])
  @@map("favorites")
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  otp       String   @unique
  token     String   @unique
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

model PlayList {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  userId      Int
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  tracks      Track[]

  @@map("playlists")
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String
  description String?

  @@map("todos")
}

enum Role {
  USER
  ADMIN
  DEVELOPER
}

enum ArtistType {
  NestArtist
  SpotifyArtist
}
